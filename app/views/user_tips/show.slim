- content_for(:title, @presenter.title)
- content_for(:subtitle, @presenter.subtitle)

- if @presenter.show_champion_tip?
  div.panel.panel-default#champion-tip
    div.panel-body
      div
        div.row
          div.col-sm-8.ggp2-flag-with-country-name
            strong
              = "#{t('tip.tournament_champion')}:"
            '&nbsp;&nbsp;
            - if @presenter.champion_tip_team.present?
              = standard_flag_image_tag_of @presenter.champion_tip_team
              = @presenter.champion_tip_team.name
            - else
              = t('tip.not_present')
            br
            - if @presenter.champion_tippable?
              small.ggp2-weakened
                = t('general.changeable_until', date: l(@presenter.champion_tip_deadline))
          - if @presenter.champion_tippable?
            div.col-sm-4.text-right.hidden-xs
              = link_to t('model.submit.update', model: Tip.model_name.human),
                edit_champion_tips_path(),
                class: 'btn btn-primary'
            div.col-xs-12.text-center.visible-xs.ggp2-panel-body-box
              = link_to t('model.submit.update', model: Tip.model_name.human),
                edit_champion_tips_path(),
                class: 'btn btn-primary'

- for phase in @presenter.phases
  h2 = phase.name
  - if @presenter.show_as_form?(phase)
    = form_tag edit_multiple_tips_path
    = render partial: 'tips_table', locals: {presenter: @presenter, aggregate: phase, show_as_form: true}
  - else
    = render partial: 'tips_table', locals: {presenter: @presenter, aggregate: phase, show_as_form: false}

small
    strong
      = "#{t('general.hint')}: "
    = t('tip.description.for_showing_others')
