- content_for(:title, t('general.user_administration'))

ul.nav.nav-tabs
  li class=('active' if (params[:type] != User::USER_TYPE_ADMINS))
    = link_to I18n.t('general.player.other'), users_path(type: User::USER_TYPE_PLAYERS)
  li class=('active' if (params[:type] == User::USER_TYPE_ADMINS))
    = link_to I18n.t('general.admin.other'), users_path(type: User::USER_TYPE_ADMINS)

br
- if @users.present?
  div.table-responsive
    table.table.table-hover
      thead
        tr
          th = User.human_attribute_name(:nickname)
          th = User.human_attribute_name(:first_name)
          th = User.human_attribute_name(:last_name)
          th = User.human_attribute_name(:email)
          th = User.human_attribute_name(:last_sign_in_at)
      tbody
        - for user in @users
          tr.link-row data-href="#{user_path(user)}"
            td = user.nickname
            td = user.first_name
            td = user.last_name
            td = user.email
            td = l(user.last_sign_in_at, format: :short) if user.last_sign_in_at