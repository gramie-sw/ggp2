<div class="well well-sm">

  <%= form_for venue, html: {class: 'form-horizontal', role: 'form'} do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :city, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
          <div class="col-xs-9 col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :stadium, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
          <div class="col-xs-9 col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :stadium, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :capacity, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
          <div class="col-xs-5 col-sm-3 col-lg-2">
            <%= f.text_field :capacity, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12 col-sm-9 col-md-8 col-lg-6">
            <div class="pull-right">
              <%= f.submit I18n.t('model.submit.update', model: Venue.model_name.human), class: 'btn btn-default' %>
              <p class="btn btn-default"><%= I18n.t('general.cancel') %></p>
            </div>
          </div>
        </div>
      </fieldset>
  <% end %>
</div>