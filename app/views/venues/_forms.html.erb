<div class="well well-sm">

  <%= form_for venue, html: {class: 'form-horizontal', role: 'form'} do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :city, class: 'col-sm-2 col-md-2 col-lg-1 control-label' %>
          <div class="col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :stadium, class: 'col-sm-2 col-md-2 col-lg-1 control-label' %>
          <div class="col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :stadium, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :capacity, class: 'col-sm-2 col-md-2 col-lg-1 control-label' %>
          <div class="col-sm-3 col-md-3 col-lg-2">
            <%= f.text_field :capacity, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-2">
          <%= f.submit I18n.t('model.messages.edit', model: Team.model_name.human), class: 'btn btn-default ' %>
        </div>
      </fieldset>
  <% end %>
</div>