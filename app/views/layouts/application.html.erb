<!DOCTYPE html>
<html lang="en">

<%= render 'layouts/header' %>

<body>
<div id="header_and_content">

  <% if true %>
      <%= render 'layouts/navigation/admin_main_menu' %>
  <% else %>
      <%= render 'layouts/navigation/user_main_menu' %>
  <% end %>

  <div class="ggp2_background_image">
    <div class="container">
      <div class="row ggp2_title_bg_transparentize_60">
        <%= content_for :sub_menu %>
      </div>
      <div class="row">
        <h3>
          <span class="ggp2_title_bg_transparentize_60"><%= content_for?(:main_title) ? content_for(:main_title) : 'Brasilien Fussball Weltmeisterschaft-2014' %></span>
        </h3>
        <h4>
          <span class="ggp2_title_bg_transparentize_60"><%= content_for?(:sub_title) ? content_for(:sub_title) : 'Es muss eine Kehrtwende geben. Und die muss 360 Grad sein. (Eduard Geyer)' %></span>
        </h4>
      </div>
      <div class="row ggp2_content_bg_transparentize_40">
        <div class="col"></div>
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

</body>
</html>
