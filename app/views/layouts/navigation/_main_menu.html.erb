                  <li<%= link.active? ? ' class=active' : '' %>><%= link_to link.label, link.url %></li>
              <% end %>
          <% end %>
          <li><%= link_to t('views.layouts.navigation.main_menu.logout'), destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
