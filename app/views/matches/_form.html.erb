              <div class="field_with_errors">
                <p class="help-block col-xs-12">
                  <%= match.errors.full_messages_for(:placeholder_team_2).first %>
                </p>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :score_team_1, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
      <div class="col-xs-9 col-sm-10 col-lg-11">
        <div class="row">
          <div class="col-xs-12 col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :score_team_1, class: 'form-control' %>
          </div>
        </div>
        <% if match.errors.get(:score_team_1) && !match.errors.get(:score_team_1).empty? %>
            <div class="row">
              <div class="field_with_errors">
                <p class="help-block col-xs-12">
                  <%= match.errors.full_messages_for(:score_team_1).first %>
                </p>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :score_team_2, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
      <div class="col-xs-9 col-sm-10 col-lg-11">
        <div class="row">
          <div class="col-xs-12 col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :score_team_2, class: 'form-control' %>
          </div>
        </div>
        <% if match.errors.get(:score_team_2) && !match.errors.get(:score_team_2).empty? %>
            <div class="row">
              <div class="field_with_errors">
                <p class="help-block col-xs-12">
                  <%= match.errors.full_messages_for(:score_team_2).first %>
                </p>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :score_team_2, class: 'col-xs-3 col-sm-2 col-lg-1 control-label' %>
      <div class="col-xs-9 col-sm-10 col-lg-11">
        <div class="row">
          <div class="col-xs-12 col-sm-7 col-md-6 col-lg-5">
            <%= f.text_field :score_team_2, class: 'form-control' %>
          </div>
        </div>
        <% if match.errors.get(:score_team_2) && !match.errors.get(:score_team_2).empty? %>
