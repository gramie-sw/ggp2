      <div class="col-xs-9 col-sm-10 col-lg-11">
        <div class="row">
          <div class="col-xs-12 col-sm-7 col-md-6 col-lg-5">
            <%= f.select :venue_id, Venue.all.collect {|venue| [ venue.city, venue.id ] }, {},  class: 'form-control' %>
          </div>
        </div>
        <% if match.errors.get(:venue) && !match.errors.get(:venue).empty? %>
            <div class="row">
              <div class="field_with_errors">
                <p class="help-block col-xs-12">
                  <%= match.errors.full_messages_for(:venue).first %>
                </p>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-3 col-sm-offset-2 col-lg-offset-1 col-xs-9 col-sm-10 col-lg-11">
        <%= f.submit class: 'btn btn-default' %>
        <%= link_to I18n.t('general.cancel'), matches_path, class: "btn btn-default" %>
      </div>
    </div>

    </fieldset>
<% end %>
</div>